@model StorageDevice

@{
    string strTitle = "Редактировать запись";
    ViewBag.Title = strTitle;
}

<script src="/js/ckeditor_4.16.2_standard/ckeditor/ckeditor.js"></script>

<div>
    <h2>@strTitle</h2>
    <div class="div-box">
        <form asp-area="Admin" asp-controller="StorageDevices" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateAdd" />
            <input type="hidden" asp-for="TitleImagePath" />

            <div asp-validation-summary="All"></div>
            <div class="div-box">
                <label asp-for="Title"></label><br />
                <input asp-for="Title" />
                <span asp-validation-for="Title"></span>
            </div>
            <div class="div-box">
                <label asp-for="Subtitle"></label><br />
                <input asp-for="Subtitle" />
                <span asp-validation-for="Subtitle"></span>
            </div>
            <div class="div-box">
                <label asp-for="FormFactor"></label><br />
                <input asp-for="FormFactor" />
                <span asp-validation-for="FormFactor"></span>
            </div>
            <div class="div-box">
                <label asp-for="ModelName"></label><br />
                <input asp-for="ModelName" />
                <span asp-validation-for="ModelName"></span>
            </div>
            <div class="div-box">
                <label asp-for="DateCreated"></label><br />
                <input asp-for="DateCreated" />
                <span asp-validation-for="DateCreated"></span>
            </div>
            <div class="div-box">
                <label asp-for="Maker"></label><br />
                <input asp-for="Maker" />
                <span asp-validation-for="Maker"></span>
            </div>
            <div class="div-box">
                <label asp-for="Price"></label><br />
                <input asp-for="Price" />
                <span asp-validation-for="Price"></span>
            </div>
            <div class="div-box">
                <label asp-for="Text"></label><br />
                <textarea id="TextEditArea" asp-for="Text"></textarea>
                <span asp-validation-for="Text"></span>
            </div>
            <div class="div-box">
                <label asp-for="TitleImagePath"></label><br />
                <input type="file" name="titleImageFile" id="titleImageFile" />
                <div>
                    <img class="img-box" src="~/img/@Model.TitleImagePath" />
                </div>
            </div>
            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function (event) {
        var editor = CKEDITOR.replace('TextEditArea');
    });
</script>