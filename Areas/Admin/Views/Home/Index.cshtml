@model IQueryable<ServiceItem>


@{
    string strTitle = "Панель администратора";
    ViewBag.Title = strTitle;
}

<div>
    <h2>@strTitle</h2>
    <div>
        <h3>Наши услуги</h3>
        <div class="div-box">
            <a asp-area="Admin" asp-controller="ServiceItems" asp-action="Edit" asp-route-id=""> Добавить услугу </a>
        </div>
        @if (@Model.Any())
        {
            <div>
                <ul>
                    @foreach (ServiceItem item in Model)
                    {
                        <li>
                            <a asp-area="Admin" asp-controller="ServiceItems" asp-action="Edit" asp-route-id="@item.Id">Редактировать</a>
                            <form style="display: inline-block;" id="form-@item.Id" asp-area="Admin" asp-controller="ServiceItems" asp-action="Delete" asp-route-id="@item.Id" method="post">
                                <input type="hidden" name="id" value="@item.Id" />
                                <a href="#" onclick="document.getElementById('form-@item.Id').submit()">Удалить</a>
                            </form>

                            <a asp-area="" asp-controller="Services" asp-action="Index" asp-route-id="@item.Id">@($"{item.Title}")</a>
                        </li>
                    }
                </ul>
            </div>
        }
    </div>

    <div class="div-box">
        <h3>Редактировать страницы сайта</h3>
        <div class="div-box">
            <a asp-area="Admin" asp-controller="TextFields" asp-action="Edit" asp-route-codeWord="PageIndex"> Главная </a>
            <a asp-area="Admin" asp-controller="TextFields" asp-action="Edit" asp-route-codeWord="PageServices"> Наши услуги </a>
            <a asp-area="Admin" asp-controller="TextFields" asp-action="Edit" asp-route-codeWord="PageContacts"> Контакты </a>
        </div>
    </div>

    <div class="div-box">
        <h3>Редактировать элементы</h3>
        <div class="div-box">
            <ul>
                <li><a asp-area="Admin" asp-controller="Processors" asp-action="Index" asp-route-id=""> Процессоры </a></li>
                <li><a asp-area="Admin" asp-controller="Motherboards" asp-action="Index" asp-route-id=""> Материнские платы </a></li>
                <li><a asp-area="Admin" asp-controller="Videoadapters" asp-action="Index" asp-route-id=""> Видеокарты </a></li>
                <li><a asp-area="Admin" asp-controller="SoundCards" asp-action="Index" asp-route-id=""> Звуковые карты </a></li>
                <li><a asp-area="Admin" asp-controller="StorageDevices" asp-action="Index" asp-route-id=""> Накопители </a></li>
                <li><a asp-area="Admin" asp-controller="PowerUnits" asp-action="Index" asp-route-id=""> Блоки питания </a></li>
            </ul>
            
            
        </div>
    </div>

    <div class="div-box">
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
            <input type="submit" value="Выйти" />
        </form>
    </div>

</div>