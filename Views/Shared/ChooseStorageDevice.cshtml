@model IQueryable<StorageDevice>

@{ 
    TextField textFiel = ViewBag.TextField;

    ViewBag.Title = textFiel.Title;
    ViewBag.Text = textFiel.Text;
}

<div class="div-box">
    @if (Model.Any())
    { 
        <ul class="big-image-list">
            @foreach (StorageDevice item in Model)
            { 
            <li>
                <a asp-area="" asp-controller="StorageDevices" asp-action="Index" asp-route-id="@item.Id">
                    <img src="~/img/@item.TitleImagePath" class="left" />
                </a>
                <h4>@item.Title</h4>
                <p>@item.Subtitle</p>

                <form style="display: inline-block;" id="form-@item.Id" asp-area="" asp-controller="Components" asp-action="ChoosePowerUnit" asp-route-id="@item.Id" method="post">
                    <input type="hidden" name="StorageDeviceId" value="@item.Id" />
                    <a href="#" onclick="document.getElementById('form-@item.Id').submit()">Добавить</a>
                </form>
            </li>
            }
        </ul>
    }
</div>