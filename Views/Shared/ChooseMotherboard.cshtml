@model IQueryable<Motherboard>

@{ 
    TextField textFiel = ViewBag.TextField;

    ViewBag.Title = textFiel.Title;
    ViewBag.Text = textFiel.Text;
}

<div class="div-box">
    <!--
    @Html.Raw(HttpContextAccessor.HttpContext.Request.Cookies["ProcessorId"])
    -->

    @if (Model.Any())
    {
        <ul class="big-image-list">
            @foreach (Motherboard item in Model)
            {
                <li>
                    <a asp-area="" asp-controller="Motherboards" asp-action="Index" asp-route-id="@item.Id">
                        <img src="~/img/@item.TitleImagePath" class="left" />
                    </a>
                    <h4>@item.Title</h4>
                    <p>@item.Subtitle</p>

                    <form style="display: inline-block;" id="form-@item.Id" asp-area="" asp-controller="Components" asp-action="ChooseVideoadapter" asp-route-id="@item.Id" method="post">
                        <input type="hidden" name="MotherboardId" value="@item.Id" />
                        <a href="#" onclick="document.getElementById('form-@item.Id').submit()">Добавить</a>
                    </form>
                </li>
            }
        </ul>
    }
</div>